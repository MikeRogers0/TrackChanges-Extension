{
  "name": "ChangesDiff",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "grunt test",
    "build-background-js": "rollup -i src/background/scripts/background.js -o lib/background/scripts/background.js -c",
    "build-popup-js": "browserify -t rollupify src/browser_action/popup.js > lib/browser_action/popup.js",
    "build-popup-html": "cp src/browser_action/popup.html lib/browser_action/popup.html",
    "build-scss": "sass src/styles/popup.scss:lib/styles/popup.css",
    "build": "npm run build-background-js & npm run build-popup-js & npm run build-popup-html & npm run build-scss"
  },
  "devDependencies": {
    "browserify": "^13.1.1",
    "diff": "^3.2.0",
    "rollup": "^0.38.1",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-watch": "^2.5.0",
    "rollupify": "^0.3.8",
    "sass": "^0.5.0"
  }
}
